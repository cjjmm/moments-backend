/* pages/publish/publish.wxss */

/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f4ff 0%, #f0f5ff 30%, #f5f7fa 100%);
  padding: 0 0 120rpx;
}

/* ==================== 页面头部 ==================== */
.page-header {
  position: relative;
  padding: 48rpx 32rpx 40rpx;
  overflow: hidden;
}

.header-bg-decoration {
  position: absolute;
  top: -60rpx;
  right: -40rpx;
  width: 240rpx;
  height: 240rpx;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.12) 0%, rgba(54, 207, 201, 0.08) 100%);
  border-radius: 50%;
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: #8c8c8c;
  margin-top: 8rpx;
}

.header-icon {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(-50%) translateX(0); }
  50% { transform: translateY(-50%) translateX(-8rpx); }
}

/* ==================== 媒体类型选择 ==================== */
.type-selector {
  background: #fff;
  border-radius: 28rpx;
  padding: 28rpx 24rpx;
  margin: 0 24rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.selector-label {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.type-options {
  display: flex;
  gap: 16rpx;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 20rpx;
  border-radius: 20rpx;
  color: #8c8c8c;
  transition: all 0.3s ease;
  background: #f8f9fa;
  position: relative;
}

.type-item.active {
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.12) 0%, rgba(54, 207, 201, 0.08) 100%);
  color: #1890ff;
}

.type-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  transition: transform 0.3s;
}

.type-item.active .type-icon-wrapper {
  transform: scale(1.1);
}

.type-icon {
  font-size: 44rpx;
}

.type-text {
  font-size: 26rpx;
  font-weight: 500;
}

.type-indicator {
  position: absolute;
  bottom: 8rpx;
  width: 24rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 3rpx;
}

.type-item:active {
  transform: scale(0.96);
}

/* ==================== 内容输入 ==================== */
.content-section {
  background: #fff;
  border-radius: 28rpx;
  padding: 28rpx;
  margin: 0 24rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.section-hint {
  margin-left: auto;
  font-size: 24rpx;
  color: #bfbfbf;
}

.content-input-wrapper {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.content-input-wrapper:focus-within {
  border-color: rgba(24, 144, 255, 0.3);
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.08);
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 30rpx;
  line-height: 1.8;
  color: #262626;
}

.input-placeholder {
  color: #bfbfbf;
}

.content-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.word-count {
  font-size: 24rpx;
  color: #bfbfbf;
  transition: color 0.3s;
}

.word-count.warning {
  color: #ff7875;
}

/* ==================== 媒体选择 ==================== */
.media-section {
  background: #fff;
  border-radius: 28rpx;
  padding: 28rpx;
  margin: 0 24rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: calc(33.33% - 12rpx);
}

.preview-image {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  background: #f0f0f0;
  object-fit: cover;
}

.image-index {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 22rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-btn {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff4757 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 300;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.4);
}

.add-btn {
  width: calc(33.33% - 12rpx);
  height: 200rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f2f5 100%);
  border: 3rpx dashed #d9d9d9;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.add-btn:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  border-color: #1890ff;
}

.add-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.add-icon {
  font-size: 40rpx;
  color: #fff;
}

.add-text {
  font-size: 24rpx;
  color: #8c8c8c;
}

.add-hint {
  font-size: 22rpx;
  color: #bfbfbf;
  margin-top: 8rpx;
}

/* ==================== 视频 ==================== */
.video-container {
  position: relative;
  background: #000;
}

.preview-video {
  width: 100%;
  height: 400rpx;
  background: #000;
}

.video-remove {
  top: 16rpx;
  right: 16rpx;
}

.add-video {
  height: 300rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f2f5 100%);
  border: 3rpx dashed #d9d9d9;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.add-video:active {
  border-color: #1890ff;
}

.add-video-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.video-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.1) 0%, rgba(54, 207, 201, 0.1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.video-icon-wrapper .add-icon {
  font-size: 44rpx;
  color: inherit;
}

/* ==================== 标签 ==================== */
.tag-section {
  background: #fff;
  border-radius: 28rpx;
  padding: 28rpx;
  margin: 0 24rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.tag-input-box {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tag-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.tag-input-wrapper:focus-within {
  border-color: rgba(24, 144, 255, 0.3);
  background: #fff;
}

.tag-prefix {
  font-size: 32rpx;
  font-weight: 600;
  color: #1890ff;
  margin-right: 8rpx;
}

.tag-input {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.tag-add-btn {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  border-radius: 50rpx;
  line-height: 76rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
}

.tag-add-btn:active {
  transform: scale(0.96);
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.08) 0%, rgba(54, 207, 201, 0.08) 100%);
  color: #1890ff;
  padding: 14rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.15);
}

.tag-text {
  font-weight: 500;
}

.tag-remove {
  margin-left: 12rpx;
  font-size: 28rpx;
  opacity: 0.6;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tag-suggestions {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
  padding-top: 8rpx;
}

.suggestions-label {
  font-size: 24rpx;
  color: #bfbfbf;
}

.suggestion-tags {
  display: flex;
  gap: 12rpx;
}

.suggestion-tag {
  font-size: 24rpx;
  color: #8c8c8c;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  transition: all 0.2s;
}

.suggestion-tag:active {
  background: #e6f7ff;
  color: #1890ff;
}

/* ==================== 发布按钮 ==================== */
.submit-section {
  padding: 24rpx;
  margin-top: 8rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #bfbfbf 0%, #a6a6a6 100%);
  color: #fff;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
}

.submit-btn.ready {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.35);
}

.submit-btn:active {
  transform: scale(0.98);
}

.submit-icon {
  font-size: 36rpx;
}

.submit-text {
  font-size: 34rpx;
}

.submit-hint {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #bfbfbf;
  margin-top: 20rpx;
}
