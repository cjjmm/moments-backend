/* pages/index/index.wxss */

/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f4ff 0%, #f0f5ff 30%, #f5f7fa 100%);
  padding-bottom: 120rpx;
}

/* ==================== 顶部装饰区域 ==================== */
.header-section {
  position: relative;
  padding: 40rpx 32rpx 20rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: -100rpx;
  right: -80rpx;
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.15) 0%, rgba(54, 207, 201, 0.1) 100%);
  border-radius: 50%;
  z-index: 0;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-top: 8rpx;
}

.header-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
}

.decoration-emoji {
  font-size: 60rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* ==================== 搜索框 ==================== */
.search-wrapper {
  padding: 0 24rpx 24rpx;
}

.search-entry {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 20rpx 24rpx;
  border-radius: 60rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(24, 144, 255, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid rgba(24, 144, 255, 0.1);
}

.search-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  filter: grayscale(1) brightness(10);
}

.search-placeholder {
  flex: 1;
  color: #bfbfbf;
  font-size: 28rpx;
}

.search-btn {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* ==================== 标签滚动 ==================== */
.tag-scroll {
  white-space: nowrap;
  padding: 10rpx 24rpx 30rpx;
}

.tag-list {
  display: inline-flex;
  gap: 20rpx;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 18rpx 28rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #595959;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.tag-item .tag-icon {
  font-size: 28rpx;
}

.tag-item.active {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.35);
  transform: scale(1.02);
}

.tag-item:active {
  transform: scale(0.95);
}

/* ==================== 帖子列表 ==================== */
.post-list {
  padding: 0 24rpx;
}

.post-card {
  background: #fff;
  border-radius: 28rpx;
  margin-bottom: 28rpx;
  padding: 32rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.06),
    0 2rpx 8rpx rgba(0, 0, 0, 0.02);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.post-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 20rpx;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar-ring {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border-radius: 50%;
  border: 3rpx solid transparent;
  background: linear-gradient(135deg, #1890ff, #36cfc9) border-box;
  -webkit-mask: 
    linear-gradient(#fff 0 0) padding-box, 
    linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.time {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 6rpx;
}

.more-btn {
  color: #bfbfbf;
  font-size: 36rpx;
  padding: 10rpx;
}

/* 帖子内容 */
.post-content {
  font-size: 30rpx;
  color: #262626;
  line-height: 1.8;
  margin-bottom: 24rpx;
  word-break: break-all;
}

/* 媒体内容 */
.post-media {
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.image-grid {
  display: grid;
  gap: 8rpx;
}

.image-count-1 {
  grid-template-columns: 1fr;
}

.image-count-1 .media-image {
  max-height: 480rpx;
  width: 100%;
  border-radius: 20rpx;
}

.image-count-2 {
  grid-template-columns: 1fr 1fr;
}

.image-count-3 {
  grid-template-columns: 1fr 1fr 1fr;
}

.image-count-4 {
  grid-template-columns: 1fr 1fr;
}

.image-count-many {
  grid-template-columns: 1fr 1fr 1fr;
}

.media-image {
  width: 100%;
  height: 220rpx;
  object-fit: cover;
  border-radius: 12rpx;
  transition: transform 0.2s;
}

.media-image:active {
  transform: scale(1.02);
}

.video-wrapper {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.media-video {
  width: 100%;
  border-radius: 20rpx;
}

/* 标签 */
.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  font-size: 24rpx;
  color: #1890ff;
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.08) 0%, rgba(54, 207, 201, 0.08) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.15);
}

/* 帖子底部 */
.post-footer {
  display: flex;
  gap: 40rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: transform 0.2s;
}

.stat-item:active {
  transform: scale(0.9);
}

.stat-icon {
  font-size: 32rpx;
}

.stat-value {
  font-size: 28rpx;
  color: #595959;
  font-weight: 500;
}

.share-btn {
  margin-left: auto;
}

/* ==================== 加载更多 ==================== */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx;
  color: #1890ff;
  font-size: 28rpx;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(24, 144, 255, 0.2);
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ==================== 没有更多 ==================== */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 50rpx;
  color: #bfbfbf;
  font-size: 26rpx;
}

.no-more-line {
  width: 60rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #d9d9d9, transparent);
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  margin: 60rpx 24rpx;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.empty-illustration {
  position: relative;
  margin-bottom: 40rpx;
}

.empty-icon-bg {
  font-size: 160rpx;
  opacity: 0.9;
}

.empty-sparkle {
  position: absolute;
  font-size: 32rpx;
  animation: sparkle 2s ease-in-out infinite;
}

.sparkle-1 {
  top: -10rpx;
  right: -20rpx;
  animation-delay: 0s;
}

.sparkle-2 {
  top: 30rpx;
  left: -30rpx;
  animation-delay: 0.5s;
}

.sparkle-3 {
  bottom: 20rpx;
  right: -30rpx;
  animation-delay: 1s;
}

@keyframes sparkle {
  0%, 100% { opacity: 0.3; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.1); }
}

.empty-title {
  font-size: 40rpx;
  color: #262626;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 40rpx;
}

.empty-action {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  padding: 24rpx 64rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
  transition: transform 0.2s, box-shadow 0.2s;
}

.empty-action:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}