/* pages/search/search.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #f0f5ff 0%, #f5f5f5 100%);
  min-height: 100vh;
}

.search-box {
  display: flex;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  background: #fff;
  border-radius: 50rpx;
  padding: 20rpx 32rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.1);
}

.search-btn {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  padding: 0 40rpx;
  border-radius: 50rpx;
  line-height: 76rpx;
  box-shadow: 0 4rpx 15rpx rgba(24, 144, 255, 0.3);
}

.filter-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

.section-title::before {
  content: '';
  display: inline-block;
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 3rpx;
  margin-right: 16rpx;
}

.clear-btn {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: normal;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  background: #f5f7fa;
  color: #666;
  padding: 14rpx 28rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.tag-item.active {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(24, 144, 255, 0.3);
}

.date-picker-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.date-picker {
  flex: 1;
  background: #f5f7fa;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.date-separator {
  color: #999;
  font-size: 28rpx;
}

.results-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.result-list {
  margin-top: 20rpx;
}

.result-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.result-item:last-child {
  border-bottom: none;
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.user-info {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.time {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.result-content {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.result-meta {
  display: flex;
  font-size: 26rpx;
  color: #999;
  gap: 24rpx;
}

.media-type {
  font-size: 30rpx;
}

.empty {
  text-align: center;
  padding: 80rpx;
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

.loading {
  text-align: center;
  padding: 50rpx;
  color: #1890ff;
  font-size: 28rpx;
}
