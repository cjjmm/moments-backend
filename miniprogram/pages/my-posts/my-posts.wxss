/* pages/my-posts/my-posts.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.post-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  margin-bottom: 16rpx;
}

.post-info {
  flex: 1;
}

.post-content {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.post-time {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.media-type {
  font-size: 40rpx;
  margin-left: 20rpx;
}

.media-preview {
  margin-bottom: 16rpx;
}

.preview-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
}

.video-cover {
  width: 100%;
  height: 200rpx;
  background: #333;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon {
  font-size: 60rpx;
}

.post-stats {
  display: flex;
  padding: 16rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  color: #666;
}

.post-stats text {
  margin-right: 30rpx;
}

.post-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
}

.action-btn {
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  margin-left: 16rpx;
}

.action-btn.edit {
  background: #e6f7ff;
  color: #1890ff;
}

.action-btn.delete {
  background: #fff1f0;
  color: #ff4d4f;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.publish-btn {
  display: inline-block;
  background: #1890ff;
  color: #fff;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 24rpx;
  color: #999;
}
