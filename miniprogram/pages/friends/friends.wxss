/* pages/friends/friends.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* Tab 栏 */
.tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.badge {
  position: absolute;
  top: 16rpx;
  right: 50rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* Tab 内容 */
.tab-content {
  padding: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 搜索框 */
.search-box {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
}

.btn-search {
  margin-left: 16rpx;
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  border-radius: 12rpx;
  height: auto;
  line-height: normal;
  display: flex;
  align-items: center;
}

/* 列表通用样式 */
.friend-list,
.search-results,
.request-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.friend-item,
.user-item,
.request-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.friend-item:last-child,
.user-item:last-child,
.request-item:last-child {
  border-bottom: none;
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.avatar-placeholder {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

/* 用户信息 */
.friend-info,
.user-info,
.request-info {
  flex: 1;
  overflow: hidden;
}

.nickname {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.username {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.message {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

/* 操作按钮 */
.friend-actions,
.user-actions,
.request-actions {
  display: flex;
  gap: 16rpx;
}

.btn-add {
  background: #1890ff;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  height: auto;
  line-height: normal;
}

.btn-status {
  background: #f0f0f0;
  color: #999;
  font-size: 24rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  height: auto;
  line-height: normal;
}

.btn-accept {
  background: #52c41a;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  height: auto;
  line-height: normal;
}

.btn-reject {
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  height: auto;
  line-height: normal;
}

.btn-delete {
  background: #fff1f0;
  color: #ff4d4f;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  height: auto;
  line-height: normal;
  border: 1rpx solid #ffccc7;
}
