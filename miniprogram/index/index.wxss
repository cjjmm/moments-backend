/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 分类导航栏 */
.category-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  z-index: 100;
}

.category-item {
  flex: 1;
  text-align: center;
  padding: 0 20rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.category-item text {
  font-size: 32rpx;
  color: #333;
  transition: all 0.3s;
}

.category-item.active text {
  color: #07c160;
  font-weight: bold;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 媒体列表容器 */
.media-list {
  margin-top: 88rpx; /* 为固定导航栏留出空间 */
}

/* 媒体项容器 */
.media-item {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 图片样式 */
.media-image {
  width: 100%;
  display: block;
}

/* 视频样式 */
.media-video {
  width: 100%;
  height: 600rpx;
  display: block;
}

/* 空数据提示 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 600rpx;
  color: #999;
  font-size: 28rpx;
}

.create-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-word;
}

/* 媒体容器 */
.media-container {
  margin-bottom: 20rpx;
}

.media-container image,
.media-container video {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
  background-color: #f0f0f0;
}

.media-container image {
  height: 400rpx;
  object-fit: cover;
}

.media-container video {
  height: 400rpx;
}

/* 帖子统计信息 */
.post-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #666;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: #007aff;
  background-color: #e8f4ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

/* 没有更多数据提示 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 空数据提示 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}