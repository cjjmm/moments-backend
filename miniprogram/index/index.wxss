/* index/index.wxss */
/* 对接 Spring Boot 后端的首页样式 */

.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 分类导航栏 */
.category-nav {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #eee;
}

.category-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.category-item.active {
  color: #1890ff;
  font-weight: bold;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* 帖子列表 */
.post-list {
  padding: 20rpx;
}

.post-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
}

/* 媒体容器 */
.media-container {
  margin-bottom: 20rpx;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.image-grid .media-image {
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

/* 单图 */
.image-count-1 .media-image {
  width: 100%;
  max-height: 400rpx;
}

/* 双图 */
.image-count-2 .media-image {
  width: calc(50% - 4rpx);
  height: 240rpx;
}

/* 三图 */
.image-count-3 .media-image {
  width: calc(33.33% - 6rpx);
  height: 200rpx;
}

/* 四图及以上 */
.image-count-4 .media-image,
.image-count-5 .media-image,
.image-count-6 .media-image,
.image-count-7 .media-image,
.image-count-8 .media-image,
.image-count-9 .media-image {
  width: calc(33.33% - 6rpx);
  height: 200rpx;
}

/* 视频 */
.media-video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}

/* 标签 */
.tags {
  margin-bottom: 16rpx;
}

.tag {
  display: inline-block;
  font-size: 24rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

/* 帖子底部 */
.post-footer {
  display: flex;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 26rpx;
  color: #999;
}

.stat-icon {
  margin-right: 8rpx;
}

.stat-count {
  color: #666;
}

/* 加载状态 */
.loading-container {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空数据 */
.empty-container {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 24rpx;
  color: #ccc;
}