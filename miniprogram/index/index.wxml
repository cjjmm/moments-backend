<!-- pages/index/index.wxml -->
<view class="container">
  <!-- 分类导航栏 -->
  <view class="category-nav">
    <view 
      class="category-item {{currentCategory === 'image' ? 'active' : ''}}"
      data-category="image"
      bindtap="switchCategory"
    >
      <text>图片</text>
    </view>
    <view 
      class="category-item {{currentCategory === 'video' ? 'active' : ''}}"
      data-category="video"
      bindtap="switchCategory"
    >
      <text>视频</text>
    </view>
  </view>
  
  <!-- 媒体列表 -->
  <view class="media-list">
    <block wx:for="{{mediaList}}" wx:key="id">
      <view class="media-item">
        <!-- 媒体内容 -->
        <block wx:if="{{item.type === 'image'}}">
          <image class="media-image" src="{{item.url}}" mode="widthFix"></image>
        </block>
        <block wx:elif="{{item.type === 'video'}}">
          <video 
            class="media-video"
            src="{{item.url}}" 
            controls 
            show-play-btn 
            show-center-play-btn
            enable-progress-gesture
            object-fit="contain"
          ></video>
        </block>
      </view>
    </block>
  </view>
  
  <!-- 空数据提示 -->
  <view class="empty-container" wx:if="{{mediaList.length === 0}}">
    <text class="empty-text">暂无媒体内容</text>
  </view>
</view>