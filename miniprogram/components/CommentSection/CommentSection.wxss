/* components/CommentSection/CommentSection.wxss */
.comment-section {
  padding: 20rpx;
}

/* 评论列表 */
.comment-list {
  margin-bottom: 20rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  min-width: 0;
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx;
  color: #1890ff;
  font-size: 26rpx;
}

/* 评论输入框 */
.comment-input-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.comment-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-left: 16rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #fff;
}
