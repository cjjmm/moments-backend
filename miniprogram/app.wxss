/* app.wxss - 全局样式 */

/* 重置样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn-primary {
  background-color: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-primary:active {
  background-color: #40a9ff;
}

.btn-default {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 44rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 32rpx;
}

.btn-danger {
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 44rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 32rpx;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #eee;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  background-color: #e6f7ff;
  color: #1890ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.mt-20 { margin-top: 20rpx; }
.mt-40 { margin-top: 40rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-40 { margin-bottom: 40rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-20 { margin-right: 20rpx; }
.p-20 { padding: 20rpx; }

/* 文字样式 */
.text-primary { color: #1890ff; }
.text-danger { color: #ff4d4f; }
.text-gray { color: #999; }
.text-center { text-align: center; }
.text-bold { font-weight: bold; }
.text-small { font-size: 24rpx; }
.text-large { font-size: 36rpx; }