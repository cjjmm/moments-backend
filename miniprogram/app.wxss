/* app.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 图片样式 */
.image-item {
  width: 100%;
  border-radius: 8rpx;
}

/* 视频样式 */
.video-item {
  width: 100%;
  height: 500rpx;
  border-radius: 8rpx;
}

/* 文字样式 */
.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}